    <%- include('partials/header') %>
    <div class="container listings-container">
      <h1 class="my-4">Listing Page</h1>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% listings.forEach((listing) => { %>
        <div class="col">
          <div
            class="card h-100"
            data-itemid="<%= listing.id %>"
            data-userid="<%= listing.user_id %>"
          >
            <img
              src="https://picsum.photos/300/200"
              class="card-img-top"
              alt="..."
            />
            <div class="card-body">
              <h5 class="card-title"><%= listing.title %></h5>
              <p class="card-text"><%= listing.description %></p>
              <p class="card-text"> <b>Price:</b> $<%= listing.price / 100 %></p>
              <p class="card-text">
                <small class="text-muted"
                  >Posted <%= listing.posted_at %></small
                >
                <button class="btn btn-link favorite-button">
                  <i class="fas fa-heart"></i>
                </button>
              </p>
            </div>
          </div>
        </div>
        <% }) %>
